<script>
    // --- UI TOGGLES ---
    function toggleMenu() {
        const menu = document.getElementById('mobile-menu');
        menu.classList.toggle('hidden');
    }
    function togglePrivacy() {
        const overlay = document.getElementById('privacy-overlay');
        overlay.classList.toggle('hidden');
    }
    function toggleTerms() {
        const overlay = document.getElementById('terms-overlay');
        overlay.classList.toggle('hidden');
    }
    function toggleLegal() {
        const overlay = document.getElementById('legal-overlay');
        overlay.classList.toggle('hidden');
    }

    // --- ACCORDION LOGIC ---
    function toggleAccordion(panelId, button) {
        const isDesktop = window.innerWidth >= 768;
        const panelEl = document.getElementById(panelId);
        const isActive = panelEl.classList.contains('active');

        // Logic for Desktop: Paired expansion
        if (isDesktop) {
            const pairs = {
                'panel1': 'panel2', 'panel2': 'panel1',
                'panel3': 'panel4', 'panel4': 'panel3',
                'panel5': 'panel6', 'panel6': 'panel5'
            };
            const partnerId = pairs[panelId];
            const partnerEl = document.getElementById(partnerId);

            // Close all others first to keep view clean
            document.querySelectorAll('.accordion-content').forEach(el => {
                if(el.id !== panelId && el.id !== partnerId) {
                    el.classList.remove('active');
                    el.style.maxHeight = null;
                    // Reset icon rotation for non-active
                    const btn = el.previousElementSibling; 
                    const icon = btn.querySelector('.accordion-icon');
                    if(icon) icon.classList.remove('rotate-45');
                }
            });

            if (!isActive) {
                // Open Current
                panelEl.classList.add('active');
                panelEl.style.maxHeight = panelEl.scrollHeight + "px";
                button.querySelector('.accordion-icon').classList.add('rotate-45');

                // Open Partner
                if(partnerEl) {
                    partnerEl.classList.add('active');
                    partnerEl.style.maxHeight = partnerEl.scrollHeight + "px";
                    const partnerBtn = partnerEl.previousElementSibling;
                    const partnerIcon = partnerBtn.querySelector('.accordion-icon');
                    if(partnerIcon) partnerIcon.classList.add('rotate-45');
                }
            } else {
                // Close Both
                panelEl.classList.remove('active');
                panelEl.style.maxHeight = null;
                button.querySelector('.accordion-icon').classList.remove('rotate-45');

                if(partnerEl) {
                    partnerEl.classList.remove('active');
                    partnerEl.style.maxHeight = null;
                    const partnerBtn = partnerEl.previousElementSibling;
                    const partnerIcon = partnerBtn.querySelector('.accordion-icon');
                    if(partnerIcon) partnerIcon.classList.remove('rotate-45');
                }
            }

        } else {
            // Logic for Mobile: Standard single toggle
            // Close others
            document.querySelectorAll('.accordion-content').forEach(el => {
                el.classList.remove('active');
                el.style.maxHeight = null;
            });
            document.querySelectorAll('.accordion-icon').forEach(el => {
                el.classList.remove('rotate-45');
            });

            if (!isActive) {
                panelEl.classList.add('active');
                panelEl.style.maxHeight = panelEl.scrollHeight + "px";
                const icon = button.querySelector('.accordion-icon');
                if(icon) icon.classList.add('rotate-45');
            }
        }
    }

    // --- SNOWFALL ENGINE ---
    document.addEventListener('DOMContentLoaded', () => {
        const snowContainer = document.getElementById('snow-container');
        const flakeCount = 50; 
        const symbols = ['‚ùÑ', '‚ùÖ', '‚ùÜ', '‚Ä¢'];

        for(let i=0; i<flakeCount; i++) {
            const flake = document.createElement('div');
            flake.classList.add('snowflake');
            flake.innerHTML = symbols[Math.floor(Math.random() * symbols.length)];
            
            // Random positioning
            flake.style.left = Math.random() * 100 + 'vw';
            flake.style.opacity = Math.random() * 0.5 + 0.3;
            flake.style.fontSize = (Math.random() * 10 + 10) + 'px';
            
            // Random animation
            const duration = Math.random() * 5 + 5; // between 5s and 10s
            flake.style.animationDuration = duration + 's';
            flake.style.animationDelay = (Math.random() * 5) + 's';
            
            snowContainer.appendChild(flake);
        }
    });
</script>

</body>
</html>
